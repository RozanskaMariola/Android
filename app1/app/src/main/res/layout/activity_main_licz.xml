<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityLicz">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="zwLicznik"
        android:text="@string/button_zwieksz" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="zmLicznik"
        android:text="@string/button_zmniejsz" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="wyLicznik"
        android:text="@string/button_wyzeruj" />


</LinearLayout>